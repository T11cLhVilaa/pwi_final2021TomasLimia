<div class="container-fluid m-0 contenedor">
    <div class="row justify-content-center registro-margin">
        <div class="col-4 bg-light">
            <form method="post" action="/usuarios/update/{{usuario.confirmacionCorreo}}">
                    <div class="mb-3">
                        <label for="username" class="form-label">Nombre de usuario</label>
                        <input type="text" class="form-control" name="username" id="username" value="{{usuario.username}}">
                    </div>
                    <div class="mb-3">
                        <label for="mail" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" name="mail" id="mail" value="{{usuario.mail}}">
                    </div>
                    <div class="mb-3">
                        <label for="contra" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" name="contra" id="contra">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    </div>
            </form>
        </div>
    </div>
</div>